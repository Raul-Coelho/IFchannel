<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!--LOGIN-->
    <navigation-rule>
        <from-view-id>/ifchannel/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/ifchannel/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--LOGIN -> REGISTER-->
    <navigation-rule>
        <from-view-id>/ifchannel/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/ifchannel/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--LOGIN <- REGISTER-->
    <navigation-rule>
        <from-view-id>/ifchannel/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registerUser</from-outcome>
            <to-view-id>/ifchannel/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--STUDENT PAGE-->
    <navigation-rule>
        <from-view-id>/ifchannel/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>student</from-outcome>
            <to-view-id>/ifchannel/studentPage.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--PROFESSOR PAGE-->
    <navigation-rule>
        <from-view-id>/ifchannel/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>professor</from-outcome>
            <to-view-id>/ifchannel/professorPage.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>professor</from-outcome>
            <to-view-id>/ifchannel/professorPage.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>


    <!--SAVE POST PAGE-->
    <navigation-rule>
        <from-view-id>/ifchannel/professorPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>savePost</from-outcome>
            <to-view-id>/ifchannel/savePost.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--Edit Post-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>editPost</from-outcome>
            <to-view-id>/ifchannel/editPost.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--Edit User-->
    <navigation-rule>
        <from-view-id>/ifchannel/professorPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/ifchannel/editUser.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--LOGOUT-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/ifchannel/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--GO INDEX-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goIndex</from-outcome>
            <to-view-id>/ifchannel/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--GO List-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goList</from-outcome>
            <to-view-id>/ifchannel/listPage.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--GO List Post-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goListPost</from-outcome>
            <to-view-id>/ifchannel/listPosts.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--GO List Post Professor-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goPosts</from-outcome>
            <to-view-id>/ifchannel/listPostsProf.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!--GO LOGIN-->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goLogin</from-outcome>
            <to-view-id>/ifchannel/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goLogin</from-outcome>
            <to-view-id>/ifchannel/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>


    <lifecycle>
        <phase-listener>com.ifpb.controller.listener.AuthListener</phase-listener>
    </lifecycle>

</faces-config>